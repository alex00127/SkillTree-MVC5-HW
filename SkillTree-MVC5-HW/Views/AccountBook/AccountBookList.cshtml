@model IEnumerable<SkillTree_MVC5_HW.Models.ViewModels.AccountBookViewModels>  
@using SkillTree_MVC5_HW.ExtensionHelper;

@{
    @(Layout = "")
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>
            @{int no = 1; } 
            @foreach (var item in Model)
            {
            <tr class="table-data-row">
                <td> @(no++) </td>
                <td> @Html.SetColorByCategory(item.Category) </td>
                <td> @item.Date.ToShortDateString() </td>
                <td> @item.Amount </td>
            </tr>
            }
        </table>
    </div>
</div>


